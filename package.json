{
  "name": "convertisseur-unites",
  "version": "1.0.0",
  "description": "Application de conversion d'unités avec tests automatisés",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e"
  },
  "keywords": [
    "conversion",
    "TypeScript",
    "testing"
  ],
  "dependencies": {
    "bootstrap": "^5.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vite": "^4.4.0"
  }
}